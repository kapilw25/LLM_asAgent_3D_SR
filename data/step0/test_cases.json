{
  "metadata": {
    "description": "Test cases for LLM-as-Judge validation with ground truth paths",
    "version": "1.0",
    "created": "2026-01-09"
  },
  "test_cases": [
    {
      "id": "test_001",
      "task": "Go from bed to lamp in a bedroom",
      "room_layout": {
        "description": "5x5 bedroom grid",
        "grid_size": [5, 5],
        "ascii_map": [
          "┌─────────────────────┐",
          "│  .   .   .   .  LAMP│  (Row 0)",
          "│  .   .   .   .   .  │  (Row 1)",
          "│  .   .   .   .   .  │  (Row 2)",
          "│  .   .   .   .   .  │  (Row 3)",
          "│ BED  .   .   .   .  │  (Row 4)",
          "└─────────────────────┘",
          "  C0  C1  C2  C3  C4"
        ],
        "objects": {
          "bed": {"position": [4, 0], "description": "Bottom-left corner"},
          "lamp": {"position": [0, 4], "description": "Top-right corner"}
        },
        "coordinate_system": "Row 0 is top (North), Column 0 is left (West)"
      },
      "ground_truth": {
        "optimal_path": ["North", "North", "North", "North", "East", "East", "East", "East"],
        "optimal_length": 8,
        "explanation": "Move 4 steps North, then 4 steps East to reach lamp diagonally"
      },
      "path_a": {
        "name": "Path A (Efficient)",
        "actions": ["North", "North", "East", "East", "North", "North", "East", "East"],
        "length": 8,
        "description": "Zigzag but same total steps as optimal"
      },
      "path_b": {
        "name": "Path B (Inefficient)",
        "actions": ["North", "South", "North", "East", "West", "East", "North", "North", "East", "East", "North", "East"],
        "length": 12,
        "description": "Wandering path with backtracking (South, West moves)"
      },
      "expected_winner": "Path A",
      "expected_scores": {
        "path_a": {"efficiency": 8, "directness": 7, "overall": 8},
        "path_b": {"efficiency": 4, "directness": 3, "overall": 4}
      },
      "reason": "Path A has no backtracking, same length as optimal. Path B wastes 4 steps."
    },
    {
      "id": "test_002",
      "task": "Go from door to desk in an office",
      "room_layout": {
        "description": "4x4 office grid",
        "grid_size": [4, 4],
        "ascii_map": [
          "┌─────────────────┐",
          "│  .   .   . DESK │  (Row 0)",
          "│  .   .   .   .  │  (Row 1)",
          "│  .   .   .   .  │  (Row 2)",
          "│DOOR  .   .   .  │  (Row 3)",
          "└─────────────────┘",
          "  C0  C1  C2  C3"
        ],
        "objects": {
          "door": {"position": [3, 0], "description": "Bottom-left corner"},
          "desk": {"position": [0, 3], "description": "Top-right corner"}
        },
        "coordinate_system": "Row 0 is top (North), Column 0 is left (West)"
      },
      "ground_truth": {
        "optimal_path": ["North", "North", "North", "East", "East", "East"],
        "optimal_length": 6,
        "explanation": "Move 3 steps North, then 3 steps East"
      },
      "path_a": {
        "name": "Path A (Efficient)",
        "actions": ["East", "East", "North", "East", "North", "North"],
        "length": 6,
        "description": "Different route but same optimal length"
      },
      "path_b": {
        "name": "Path B (Inefficient)",
        "actions": ["North", "East", "South", "East", "North", "North", "East", "North"],
        "length": 8,
        "description": "Indirect route with one backtrack (South)"
      },
      "expected_winner": "Path A",
      "expected_scores": {
        "path_a": {"efficiency": 9, "directness": 8, "overall": 9},
        "path_b": {"efficiency": 6, "directness": 5, "overall": 5}
      },
      "reason": "Path A matches optimal length. Path B wastes 2 steps with backtracking."
    },
    {
      "id": "test_003",
      "task": "Go from chair to window in a living room",
      "room_layout": {
        "description": "3x3 living room grid",
        "grid_size": [3, 3],
        "ascii_map": [
          "┌─────────────┐",
          "│  .   . WIND │  (Row 0)",
          "│  .   .   .  │  (Row 1)",
          "│CHAIR .   .  │  (Row 2)",
          "└─────────────┘",
          "  C0  C1  C2"
        ],
        "objects": {
          "chair": {"position": [2, 0], "description": "Bottom-left"},
          "window": {"position": [0, 2], "description": "Top-right"}
        },
        "coordinate_system": "Row 0 is top (North), Column 0 is left (West)"
      },
      "ground_truth": {
        "optimal_path": ["North", "North", "East", "East"],
        "optimal_length": 4,
        "explanation": "2 steps North, 2 steps East"
      },
      "path_a": {
        "name": "Path A (Optimal)",
        "actions": ["North", "East", "North", "East"],
        "length": 4,
        "description": "Diagonal zigzag, optimal length"
      },
      "path_b": {
        "name": "Path B (Slightly longer)",
        "actions": ["East", "North", "West", "East", "North", "East"],
        "length": 6,
        "description": "Goes East first, then backtracks West"
      },
      "expected_winner": "Path A",
      "expected_scores": {
        "path_a": {"efficiency": 10, "directness": 9, "overall": 10},
        "path_b": {"efficiency": 6, "directness": 4, "overall": 5}
      },
      "reason": "Path A is optimal. Path B has unnecessary West backtrack."
    }
  ]
}
